<% layout('layout/boilerplate.ejs') %>
<div class="text-light">
  <!-- Header Section -->
  <div class="text-center mb-5">
    <h1 class="text-gradient fw-bold">
      <i class="fas fa-building me-3"></i>
      <%= findApplication.company %> Application
    </h1>
    <p class="text-secondary">Application details and progress tracking</p>
  </div>

  <!-- Main Content -->
  <div class="row g-4">
    <!-- Application Details -->
    <div class="col-lg-8">
      <div class="glass-card">
        <div class="card-header">
          <h4 class="text-gradient mb-0">
            <i class="fas fa-info-circle me-2"></i>Application Details
          </h4>
        </div>
        <div class="card-body">
          <div class="row g-3">
            <div class="col-md-6">
              <div class="d-flex align-items-center mb-3">
                <i class="fas fa-building text-primary me-3 fs-4"></i>
                <div>
                  <small class="text-muted">Company</small>
                  <h5 class="text-light mb-0"><%= findApplication.company %></h5>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="d-flex align-items-center mb-3">
                <i class="fas fa-user-tie text-success me-3 fs-4"></i>
                <div>
                  <small class="text-muted">Position</small>
                  <h5 class="text-light mb-0"><%= findApplication.position %></h5>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="d-flex align-items-center mb-3">
                <i class="fas fa-tachometer-alt text-warning me-3 fs-4"></i>
                <div>
                  <small class="text-muted">Status</small>
                  <h5 class="mb-0">
                    <span class="badge status-<%= findApplication.status %> fs-6">
                      <i class="fas fa-circle me-1"></i>
                      <%= findApplication.status %>
                    </span>
                  </h5>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="d-flex align-items-center mb-3">
                <i class="fas fa-calendar text-info me-3 fs-4"></i>
                <div>
                  <small class="text-muted">Applied</small>
                  <h5 class="text-light mb-0"><%= new Date(findApplication.appliedDate).toLocaleDateString() %></h5>
                </div>
              </div>
            </div>
            <% if (findApplication.interviewDate && findApplication.interviewDate !== '') { %>
              <div class="col-md-6">
                <div class="d-flex align-items-center mb-3">
                  <i class="fas fa-clock text-danger me-3 fs-4"></i>
                  <div>
                    <small class="text-muted">Interview</small>
                    <h5 class="text-light mb-0"><%= new Date(findApplication.interviewDate).toLocaleDateString() %></h5>
                  </div>
                </div>
              </div>
            <% } %>
            <% if (findApplication.url && findApplication.url !== '') { %>
              <div class="col-md-6">
                <div class="d-flex align-items-center mb-3">
                  <i class="fas fa-link text-primary me-3 fs-4"></i>
                  <div>
                    <small class="text-muted">Job URL</small>
                    <h5 class="text-light mb-0">
                      <a href="<%= findApplication.url %>" target="_blank" class="text-decoration-none">
                        <i class="fas fa-external-link-alt me-1"></i>View Posting
                      </a>
                    </h5>
                  </div>
                </div>
              </div>
            <% } %>
          </div>

          <% if (findApplication.notes && findApplication.notes !== '') { %>
            <div class="mt-4">
              <h5 class="text-gradient">
                <i class="fas fa-sticky-note me-2"></i>Notes
              </h5>
              <div class="glass-card p-3">
                <p class="text-light mb-0"><%= findApplication.notes %></p>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
      <!-- Resume Section -->
      <% if (findApplication.resumeFile && findApplication.resumeFile.originalName) { %>
        <div class="glass-card mb-4">
          <div class="card-header">
            <h5 class="text-gradient mb-0">
              <i class="fas fa-file-pdf me-2"></i>Resume Details
            </h5>
          </div>
          <div class="card-body">
            <div class="d-flex align-items-center mb-3">
              <i class="fas fa-file text-danger me-3 fs-4"></i>
              <div>
                <h6 class="text-light mb-0"><%= findApplication.resumeFile.originalName %></h6>
                <small class="text-muted">
                  <%= (findApplication.resumeFile.size / 1024).toFixed(2) %> KB â€¢ 
                  <%= findApplication.resumeFile.mimetype %>
                </small>
              </div>
            </div>
            <a href="/application/<%= findApplication._id %>/analysis" class="btn btn-info w-100">
              <i class="fas fa-magic me-2"></i>AI Analysis
            </a>
          </div>
        </div>
      <% } %>

      <!-- Actions -->
      <div class="glass-card">
        <div class="card-header">
          <h5 class="text-gradient mb-0">
            <i class="fas fa-cogs me-2"></i>Actions
          </h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <a href="/application/<%= findApplication._id %>/edit" class="btn btn-primary">
              <i class="fas fa-edit me-2"></i>Edit Application
            </a>
            <a href="/application" class="btn btn-outline-light">
              <i class="fas fa-list me-2"></i>View All
            </a>
            <% if (findApplication.resumeFile && findApplication.resumeFile.originalName) { %>
              <a href="/application/<%= findApplication._id %>/analysis" class="btn btn-info">
                <i class="fas fa-magic me-2"></i>AI Analysis
              </a>
            <% } %>
            <form action="/application/<%= findApplication._id %>?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger w-100" 
                onclick="return confirm('Are you sure you want to delete this application?')">
                <i class="fas fa-trash me-2"></i>Delete
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
