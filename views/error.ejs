<% layout('layout/boilerplate.ejs') %>
<div class="container-fluid d-flex align-items-center justify-content-center min-vh-100">
  <div class="error-glass-card p-5 text-center error-card-max-width">
    <div class="mb-4">
      <i class="fas fa-exclamation-triangle text-danger error-icon-large"></i>
    </div>
    
    <h1 class="error-text-gradient fw-bold mb-3">
      <i class="fas fa-bug me-2"></i>
      Oops! Something went wrong
    </h1>
    
    <div class="error-glass-card p-4 mb-4">
      <h4 class="text-danger mb-3">
        <i class="fas fa-exclamation-circle me-2"></i>
        <%= err.message %>
      </h4>
      
      <div class="text-start">
        <small class="text-muted">Error Details:</small>
        <pre class="bg-dark text-light p-3 rounded mt-2 error-pre">
<%= err.stack %>
        </pre>
      </div>
    </div>
    
    <div class="d-flex gap-3 justify-content-center">
      <a href="/" class="btn btn-primary">
        <i class="fas fa-home me-2"></i>
        Go Home
      </a>
      <button onclick="history.back()" class="btn btn-outline-light">
        <i class="fas fa-arrow-left me-2"></i>
        Go Back
      </button>
    </div>
    
    <div class="mt-4">
      <small class="text-muted">
        <i class="fas fa-info-circle me-1"></i>
        If this error persists, please contact support
      </small>
    </div>
  </div>
</div>
