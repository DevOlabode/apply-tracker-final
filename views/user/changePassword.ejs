<% layout('layout/boilerplate.ejs') %>

<div class="password-change-container">
  <!-- Background Effects -->
  <div class="animated-bg">
    <div class="bg-blob"></div>
    <div class="bg-blob"></div>
    <div class="bg-blob"></div>
  </div>

  <!-- Main Form Container -->
  <div class="password-form-wrapper">
    <div class="password-form-container glass-card fade-in">
      
      <!-- Header Section -->
      <div class="password-header">
        <div class="header-icon">
          <i class="fas fa-lock"></i>
        </div>
        <h1 class="password-title">Change Password</h1>
        <p class="password-subtitle">Update your account security</p>
      </div>

      <!-- Password Change Form -->
      <form action="/user/<%= currentUser._id %>/changePassword?_method=put" method="post" class="password-form">
        
        <!-- Current Password Field -->
        <div class="form-group">
          <label for="currentPassword" class="floating-label">Current Password</label>
          <input type="password" id="currentPassword" name="currentPassword" class="form-input" required>
          <i class="input-icon fas fa-key"></i>
          <div class="validation-hint">Enter your current password</div>
        </div>

        <!-- New Password Field -->
        <div class="form-group">
          <label for="newPassword" class="floating-label">New Password</label>
          <input type="password" id="newPassword" name="newPassword" class="form-input" required>
          <i class="input-icon fas fa-lock"></i>
          <div class="validation-hint">At least 8 characters with letters and numbers</div>
        </div>

        <!-- Confirm Password Field -->
        <div class="form-group">
          <label for="confirmPassword" class="floating-label">Confirm New Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-input" required>
          <i class="input-icon fas fa-lock"></i>
          <div class="validation-hint">Re-enter your new password</div>
        </div>

        <!-- Submit Button -->
        <div class="form-actions">
          <button type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-sync-alt"></i>
            Update Password
          </button>
        </div>

      </form>

      <!-- Back Link -->
      <div class="back-link">
        <a href="/user/<%= currentUser._id %>" class="link">
          <i class="fas fa-arrow-left"></i>
          Back to Profile
        </a>
      </div>

    </div>
  </div>
</div>